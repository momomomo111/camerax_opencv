<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/ic_opencv_foreground" />

    <Button
        android:id="@+id/gaussianBlurButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gaussianblur_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/thresholdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/thresholdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/threshold_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/cannyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cannyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/canny_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/grayScaleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/grayScaleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grayscale_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/rgbExtractionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rgbExtractionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rgbextraction_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/hsvExtractionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hsvExtractionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hsvextraction_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/erodeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/erodeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/erode_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/dilateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dilateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dilate_nav"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>