<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.camerax_opencv.R" />

        <variable
            name="viewmodel"
            type="com.example.camerax_opencv.data.GaussianblurViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        tools:context=".GaussianBlurFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="664dp"
                android:layout_weight="1"
                android:contentDescription="@string/imageview_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kSizeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    bind:set_param="@{viewmodel.liveParams.KSize}"
                    bind:set_type="@{R.string.k_size}" />

                <TextView
                    android:id="@+id/sigmaXText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    bind:set_param="@{viewmodel.liveParams.sigmaX}"
                    bind:set_type="@{R.string.sigma_x}" />

                <TextView
                    android:id="@+id/sigmaYText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    bind:set_param="@{viewmodel.liveParams.sigmaY}"
                    bind:set_type="@{R.string.sigma_y}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderKSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stepSize="2.0"
                    android:valueFrom="1.0"
                    android:valueTo="51.0" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSigmaX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stepSize="1.0"
                    android:valueFrom="0.0"
                    android:valueTo="50.0" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSigmaY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stepSize="1.0"
                    android:valueFrom="0.0"
                    android:valueTo="50.0" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>